{
  "name": "generator-tsx",
  "version": "1.2.0",
  "description": "CRA + TypeScript + React + Redux + Router + Testing Library",
  "homepage": "https://github.com/adobe/generator-tsx",
  "author": {
    "name": "Adobe, Inc.",
    "email": "Grp-opensourceoffice@adobe.com",
    "url": "https://adobe.com"
  },
  "main": "generators/app/index.js",
  "files": [
    "generators/*.js",
    "generators/*.d.ts",
    "generators/*/*.js",
    "generators/*/*.d.ts",
    "generators/*/templates/"
  ],
  "keywords": [
    "cra",
    "typescript",
    "react",
    "react-redux",
    "react-router",
    "react-testing-library",
    "react-intl",
    "yeoman-generator",
    "framework"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@jedmao/semantic-release-npm-github-config": "^1.0.6",
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^24.0.17",
    "@types/semver": "^6.0.1",
    "@types/yeoman-assert": "^3.1.1",
    "@types/yeoman-generator": "^3.1.4",
    "@types/yeoman-test": "^2.0.3",
    "@types/yosay": "0.0.29",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^2.0.0",
    "commitizen": "^4.0.3",
    "coveralls": "^3.0.6",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-plugin-prettier": "^3.1.0",
    "fs-extra": "^8.1.0",
    "husky": "^3.0.3",
    "jest": "^24.8.0",
    "jest-watch-typeahead": "^0.3.1",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.13.19",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^2.0.0"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "dependencies": {
    "@queso/camel-case": "^0.2.0",
    "@queso/pick": "^0.6.0",
    "@queso/pick-by": "^0.1.0",
    "@queso/snake-case": "^0.2.0",
    "chalk": "^2.4.2",
    "semver": "^6.3.0",
    "tslib": "^1.10.0",
    "yeoman-generator": "^4.0.1",
    "yosay": "^2.0.2"
  },
  "prettier": {
    "arrowParens": "avoid",
    "proseWrap": "always",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": [
          "*.json",
          "*.md",
          "*.yml"
        ],
        "options": {
          "useTabs": false,
          "tabWidth": 2
        }
      }
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "modulePathIgnorePatterns": [
      "expected",
      "templates"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "scripts": {
    "clean": "rimraf coverage *.log* && npm run clean:build",
    "clean:build": "rimraf generators/*.js generators/*/*.js",
    "prebuild": "npm run clean:build",
    "build": "tsc && npm run prettier",
    "prettier": "prettier \"generators/**/*.{js,d.ts}\" --write",
    "lint": "eslint generators/**/*[!d].ts",
    "pretest": "npm run clean",
    "test": "jest --watch",
    "precover": "npm run clean",
    "cover": "jest --coverage",
    "prepublishOnly": "npm run build",
    "commit": "git-cz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "tsc --noEmit && npm run cover"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branch": "master",
    "extends": "@jedmao/semantic-release-npm-github-config"
  },
  "repository": "https://github.com/adobe/generator-tsx.git",
  "license": "MIT"
}
